<root>
    <styles>
        <include src="s2r://panorama/styles/custom_game/custom_hero_selection.css" />
    </styles>

    <scripts>
        <include src="s2r://panorama/scripts/custom_game/custom_hero_selection_container.js" />
        <include src="s2r://panorama/scripts/custom_game/custom_hero_selection.js" />
    </scripts>

    <snippets>
        <snippet name="CustomHeroSelection">
            <Panel class="CustomHeroSelection" hittest="true">
                <Panel class="HeroCard" hittest="false">
                    <Label id="HeroImage" class="npc_dota_hero_arena_hero_asan" />
                    <Label class="HeroName" id="HeroSelect" text="CHOOSE" hittest="true" onactivate="ChangeHero('npc_dota_hero_elder_titan', 'npc_dota_hero_arena_hero_wearable_dummy_asan')" />
                </Panel>

                <Panel class="HeroCard" hittest="false">
                    <Label id="HeroImage" class="npc_dota_hero_arena_hero_akasha" />
                    <Label class="HeroName" id="HeroSelect" text="CHOOSE" hittest="true" onactivate="ChangeHero('npc_dota_hero_queenofpain', 'npc_dota_hero_arena_hero_wearable_dummy_akasha')" />
                </Panel>

                <Panel class="HeroCard" hittest="false">
                    <Label id="HeroImage" class="npc_dota_hero_arena_hero_garm" />
                    <Label class="HeroName" id="HeroSelect" text="CHOOSE" hittest="true" onactivate="ChangeHero('npc_dota_hero_visage', 'npc_dota_hero_arena_hero_wearable_dummy_fenrir')" />
                </Panel>

                <Panel class="HeroCard" hittest="false">
                    <Label id="HeroImage" class="npc_dota_hero_arena_hero_timmy" />
                    <Label class="HeroName" id="HeroSelect" text="CHOOSE" hittest="true" onactivate="ChangeHero('npc_dota_hero_rattletrap', '')" />
                </Panel>

                <Panel class="HeroCard" hittest="false">
                    <Label id="HeroImage" class="npc_dota_hero_arena_hero_chicken" />
                    <Label class="HeroName" id="HeroSelect" text="CHOOSE" hittest="true" onactivate="ChangeHero('npc_dota_hero_wisp', '')" />
                </Panel>

                <Panel class="HeroCard" hittest="false">
                    <Label id="HeroImage" class="npc_dota_hero_arena_hero_meepo" />
                    <Label class="HeroName" id="HeroSelect" text="CHOOSE" hittest="true" onactivate="ChangeHero('npc_dota_hero_meepo', '')" />
                </Panel>

                <Label id="Close" class="Close" text="X" />
            </Panel>
        </snippet>
    </snippets>

    <Panel hittest="false" style="width: 100%; height: 100%;">
        <Panel id="CustomHeroSelection" />
    </Panel>
</root>